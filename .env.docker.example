# ==================================================
# TransLogistics â€” Docker Environment Variables
# ==================================================
# Copy this file to .env.docker for local Docker development
# ==================================================

# --------------------------------------------------
# APPLICATION
# --------------------------------------------------
NODE_ENV=development
COMPOSE_PROJECT_NAME=translogistics

# --------------------------------------------------
# DATABASE (Docker internal)
# --------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=translogistics
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/translogistics

# --------------------------------------------------
# REDIS (Docker internal)
# --------------------------------------------------
REDIS_URL=redis://redis:6379

# --------------------------------------------------
# API SERVICE
# --------------------------------------------------
API_PORT=3001
SERVICE_NAME=translogistics-api
LOG_LEVEL=debug

# --------------------------------------------------
# AI ENGINE
# --------------------------------------------------
AI_ENGINE_URL=http://ai-engine:8000
AI_ENGINE_INTERNAL_KEY=dev-internal-key

# --------------------------------------------------
# WEB APP
# --------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001
