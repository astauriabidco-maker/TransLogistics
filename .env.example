# ==================================================
# TransLogistics â€” Environment Variables Template
# ==================================================
# Copy this file to .env.local for development
# NEVER commit actual secrets to version control
# ==================================================

# --------------------------------------------------
# APPLICATION
# --------------------------------------------------
NODE_ENV=development
APP_NAME=TransLogistics
APP_URL=http://localhost:3000

# --------------------------------------------------
# DATABASE
# --------------------------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/translogistics?schema=public
DATABASE_POOL_SIZE=10

# --------------------------------------------------
# REDIS
# --------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL_SECONDS=3600

# --------------------------------------------------
# AUTHENTICATION
# --------------------------------------------------
# JWT Configuration
AUTH_JWT_SECRET=your-jwt-secret-min-32-chars
AUTH_JWT_EXPIRY_SECONDS=3600
AUTH_REFRESH_TOKEN_EXPIRY_SECONDS=604800

# API Keys (for partner integrations)
# Format: comma-separated list of valid keys
API_KEYS=key1,key2

# --------------------------------------------------
# AI ENGINE (VolumeScan)
# --------------------------------------------------
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_TIMEOUT_MS=30000
AI_ENGINE_INTERNAL_KEY=internal-api-key

# Confidence thresholds
VOLUMESCAN_AUTO_ACCEPT_THRESHOLD=0.85
VOLUMESCAN_MANUAL_VALIDATION_THRESHOLD=0.60

# --------------------------------------------------
# WHATSAPP INTEGRATION
# --------------------------------------------------
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Session configuration
WHATSAPP_SESSION_EXPIRY_HOURS=24

# --------------------------------------------------
# PAYMENT GATEWAY
# --------------------------------------------------
PAYMENT_PROVIDER=stripe
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# --------------------------------------------------
# SMS FALLBACK
# --------------------------------------------------
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+1234567890

# --------------------------------------------------
# STORAGE (for scan images)
# --------------------------------------------------
STORAGE_PROVIDER=s3
STORAGE_BUCKET=translogistics-scans
STORAGE_REGION=eu-west-1
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key

# --------------------------------------------------
# FEATURE FLAGS
# --------------------------------------------------
FEATURE_VOLUMESCAN_ENABLED=true
FEATURE_WHATSAPP_ENABLED=true
FEATURE_SMS_FALLBACK_ENABLED=false
FEATURE_MULTI_HUB_ENABLED=true

# --------------------------------------------------
# OBSERVABILITY
# --------------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry (optional)
SENTRY_DSN=

# --------------------------------------------------
# RATE LIMITING
# --------------------------------------------------
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
